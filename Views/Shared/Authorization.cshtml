@model UserLoginDetails
@{
    Layout = "_MainLayout";
    ViewBag.Title = "Авторизація";
}
<div class="text-center">
    <h2 class="text-center mt-3 mb-3">Введіть ваші дані</h2>
    @if(@ViewBag.Message != null)
    {
        <p class="text-danger fw-bold">@ViewBag.Message</p>
    }
    <form method="post">
        <div class="row justify-content-center">
            <div class="col-3">
                 <input asp-for="Login" class="form-control" type="text" placeholder="Логін" required>
            </div>
        </div>
        <div class="row justify-content-center mt-3">
            <div class="col-3">
                 <input asp-for="Password" class="form-control" type="password" placeholder="Пароль" required>
            </div>
        </div>
        
        <button type="submit" class="mt-3 btn btn-dark">Увійти</button>
    </form>
    
</div>